<?xml version="1.0"?>
<assembly>
    <id>plugin</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <includes>
                <include>plugin-descriptor.properties</include>
            </includes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/</outputDirectory>
            <useProjectArtifact>true</useProjectArtifact>
            <useTransitiveFiltering>true</useTransitiveFiltering>
            <scope>runtime</scope>
            <excludes>
                <exclude>*jna*</exclude>
                <exclude>org.elasticsearch:elasticsearch</exclude>
                <exclude>org.slf4j:slf4j-api*</exclude>
            </excludes>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>com.petalmd:armor</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>

